{% set useful_links = config.site.footer.links[:3] %}
{% set support_links = config.site.footer.links[3:] %}
{% set homepage = grav.pages.find('/') %}
{% set homepage_content = homepage.header.footer_content %}
<footer class="footer-logo slide-up">
	<div class="container footer-logo-container">
		<div class="footer-logo-top">
			<div class="footer-logo-area">
				{% include 'widgets/logo.html.twig' with { position: 'footer' } %}
				{% set words = data.descriptions[grav.language.getActive].description|split(' ')|slice(0, 25)|join(' ') %}

				<p class="branding-text service-description">{{ words }}...</p>
				{% include 'widgets/footer-card.html.twig' %}
			</div>
			
				{% include 'widgets/footer-link.html.twig' %}
			{% include 'widgets/footer-support.html.twig' %}
		</div>

	</div>
			{% include 'widgets/footer-copyright.html.twig' %}
</footer>

<style>
	{% include 'partials/custom.css.twig' %}
</style>